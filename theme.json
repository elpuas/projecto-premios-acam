{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version":2,
	"settings": {
		"border": {
			"color": false,
			"radius": false,
			"style": false,
			"width": false
		},
		"color": {
			"background": true,
			"custom": false,
			"customDuotone": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"duotone": [
				{
					"colors": [
						"#314460",
						"#192132"
					],
					"slug": "primary-and-charcoal",
					"name": "Primary and Charcoal"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(to bottom, #b07333 0%,#9b6530 8%,#a16936 37%,#ca8140 44%,#f6f569 67%,#ca8140 100%)",
					"slug": "acam",
					"name": "ACAM"
				},
				{
					"gradient": "radial-gradient(circle, rgba(5,13,44,1) 0%, rgba(5,12,38,1) 23%, rgba(7,9,23,1) 61%, rgba(9,7,8,1) 100%)",
					"slug": "acam-dark",
					"name": "ACAM Dark"
				}
			],
			"link": false,
			"palette": [
				{
					"color": "#EAB12E",
					"slug": "primary",
					"name": "Primary"
				},
				{
					"color": "#050D2C",
					"slug": "secondary",
					"name": "Secondary"
				},
				{
					"color": "#ED9A4C",
					"slug": "tertiary",
					"name": "Tertiary"
				},
				{
					"color": "#050D2C",
					"slug": "quaternary",
					"name": "Quaternary"
				},
				{
					"color": "#FFF",
					"slug": "white",
					"name": "White"
				},
				{
					"color": "#192132",
					"slug": "charcoal",
					"name": "Charcoal"
				}
			],
			"text": true
		},
		"layout": {
			"contentSize": "952px",
			"wideSize": "1152px"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"units": [
				"px",
				"rem"
			]
		},
		"typography": {
			"customFontSize": true,
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "Brandon Grotesque",
					"slug": "brandongrotesque",
					"name": "Brandon Grotesque"
				},
				{
					"fontFamily": "Brandon Grotesque Bold",
					"slug": "brandongrotesquebold",
					"name": "Brandon Grotesque Bold"
				},
				{
					"fontFamily": "Montserrat",
					"slug": "montserrat",
					"name": "Montserrat"
				}
			],
			"fontSizes": [
				{
					"name": "Hero",
					"size": "111px",
					"slug": "hero"
				},
				{
					"name": "Section Header",
					"size": "77px",
					"slug": "section-header"
				},
				{
					"name": "Section Content",
					"size": "36px",
					"slug": "section-content"
				},
				{
					"name": "Body",
					"size": "28px",
					"slug": "body"
				},
				{
					"name": "Base",
					"size": "22px",
					"slug": "base"
				},
				{
					"name": "small",
					"size": "18px",
					"slug": "small"
				},
				{
					"name": "Caption",
					"size": "16px",
					"slug": "caption"
				}
			],
			"fontStyle": false,
			"fontWeight": false,
			"letterSpacing": true,
			"lineHeight": false,
			"textDecoration": false,
			"textTransform": true
		},
		"blocks": {
			"core/paragraph": {
				"typography": {
					"fontSizes": [
						{
							"name": "Base",
							"size": "22px",
							"slug": "base"
						}
					]
				}
			},

			"core/button": {
				"border": {
					"customRadius": false
				}
			}
		}
	},
	"styles": {
		"color": {
			"text": "var(--wp--preset--color--secondary)",
			"background": "var(--wp--preset--color--primary)"
		},
		"typography": {
			"fontSize": "var(--wp--preset--font-size--base)",
			"fontFamily": "var(--wp--preset--font-family--montserrat)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--tertiary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--hero)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--section-header)"
				}
			}
		},
		"blocks": {
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--brandongrotesquebold)"
				}
			},
			"core/paragraph": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/list": {
				"color": {
					"text": "var(--wp--preset--color--secondary)"
				}
			},
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--secondary)",
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--base)"
				}
			},
			"core/group": {
				"spacing": {
					"padding": {
						"top": "0px",
						"right": "0px",
						"bottom": "0px",
						"left": "0px"
					}
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		}
	},
	"customTemplates": [
		{
            "name": "page-about",
            "title": "The About Template",
            "postTypes": [
                "page"
            ]
        }
	],
	"templateParts": [
		{
			"name": "acam-header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "acam-footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"patterns": [ "hero", "cards" ]
}